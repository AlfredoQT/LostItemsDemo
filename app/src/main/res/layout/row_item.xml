<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="4dp"
        android:layout_margin="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/row_item_image_image_view"
                android:src="@drawable/wallet"
                android:layout_width="match_parent"
                android:layout_height="160dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/row_item_name_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Wallet"
                    android:textColor="#111"
                    android:layout_marginBottom="8dp"/>
                <TextView
                    android:id="@+id/row_item_desc_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Black wallet with ten thousand bucks inside. Holds the secrets of the universe"
                    android:textColor="#555"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/row_item_lat_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lat: 0.0"
                    android:textColor="#333"/>

                <TextView
                    android:id="@+id/row_item_lng_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lng: 0.0"
                    android:textColor="#333"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/row_item_update_button"
                        android:minWidth="0dp"
                        android:padding="0dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Update"
                        android:layout_marginRight="16dp"
                        android:theme="@style/ItemRowButton" />
                    <Button
                        android:id="@+id/row_item_found_button"
                        android:minWidth="0dp"
                        android:padding="0dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Not Found"
                        android:theme="@style/ItemRowButton" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>